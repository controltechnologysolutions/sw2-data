{
	"info": {
		"_postman_id": "b1487aa5-991c-4e77-b775-b4a16c747788",
		"name": "[Softwrench] Ping Identity",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "11867613"
	},
	"item": [
		{
			"name": "0. Discovery OIDC",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/.well-known/openid-configuration",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						".well-known",
						"openid-configuration"
					]
				}
			},
			"response": []
		},
		{
			"name": "1. Authorize",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/as/authorization.oauth2?client_id={{clientId}}&redirect_uri={{redirectUri}}&scope=profile openid&response_type=code",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"as",
						"authorization.oauth2"
					],
					"query": [
						{
							"key": "client_id",
							"value": "{{clientId}}"
						},
						{
							"key": "redirect_uri",
							"value": "{{redirectUri}}"
						},
						{
							"key": "scope",
							"value": "profile openid"
						},
						{
							"key": "response_type",
							"value": "code"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "2.1. Token (Authorization Code)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();\r",
							"if (!response && !response?.access_token) return;\r",
							"pm.environment.set('accessToken', response.access_token);\r",
							"pm.environment.set('idToken', response.id_token);\r",
							"pm.environment.set('refreshToken', response.refresh_token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "code",
							"value": "{{code}}",
							"type": "text"
						},
						{
							"key": "client_id",
							"value": "{{clientId}}",
							"type": "text"
						},
						{
							"key": "redirect_uri",
							"value": "{{redirectUri}}",
							"type": "text"
						},
						{
							"key": "grant_type",
							"value": "authorization_code",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "{{clientSecret}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{baseUrl}}/as/token.oauth2?scope=profile openid",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"as",
						"token.oauth2"
					],
					"query": [
						{
							"key": "scope",
							"value": "profile openid"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "2.2. Token (With Secret)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Get access token and set to environment\", function () {\r",
							"    const res = pm.response.json();\r",
							"    pm.environment.set(\"accessToken\", res.access_token);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "client_id",
							"value": "{{clientId}}",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "{{clientSecret}}",
							"type": "text"
						},
						{
							"key": "grant_type",
							"value": "client_credentials",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{baseUrl}}/as/token.oauth2?scope=profile openid",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"as",
						"token.oauth2"
					],
					"query": [
						{
							"key": "scope",
							"value": "profile openid"
						},
						{
							"key": "grant_type",
							"value": "client_credentials",
							"disabled": true
						},
						{
							"key": "redirect_uri",
							"value": "{{redirectUri}}",
							"disabled": true
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "2.3. Token (Refresh Token)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const response = pm.response.json();\r",
							"if (!response && !response?.access_token) return;\r",
							"pm.environment.set('accessToken', response.access_token);\r",
							"pm.environment.set('idToken', response.id_token);\r",
							"pm.environment.set('refreshToken', response.refresh_token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "refresh_token",
							"value": "{{refreshToken}}",
							"type": "text"
						},
						{
							"key": "client_id",
							"value": "{{clientId}}",
							"type": "text"
						},
						{
							"key": "redirect_uri",
							"value": "{{redirectUri}}",
							"type": "text"
						},
						{
							"key": "grant_type",
							"value": "refresh_token",
							"type": "text"
						},
						{
							"key": "client_secret",
							"value": "{{clientSecret}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{baseUrl}}/as/token.oauth2?scope=profile openid",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"as",
						"token.oauth2"
					],
					"query": [
						{
							"key": "scope",
							"value": "profile openid"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "3. Token Instrospection",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Get access token and set to environment\", function () {\r",
							"    const res = pm.response.json();\r",
							"    pm.environment.set(\"accessToken\", res.access_token);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "{{clientSecret}}",
							"type": "string"
						},
						{
							"key": "username",
							"value": "{{clientId}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "token",
							"value": "{{accessToken}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{baseUrl}}/as/introspect.oauth2",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"as",
						"introspect.oauth2"
					]
				}
			},
			"response": []
		},
		{
			"name": "4. User Info",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{accessToken}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/idp/userinfo.openid",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"idp",
						"userinfo.openid"
					]
				}
			},
			"response": []
		}
	]
}